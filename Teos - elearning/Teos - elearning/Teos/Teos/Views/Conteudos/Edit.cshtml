            @Html.EditorFor(model => model.Avaliacao, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Avaliacao, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Texto_Embed, htmlAttributes: new { @class = "col-md-5" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.Texto_Embed, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Texto_Embed, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Hierarquia, htmlAttributes: new { @class = "col-md-5" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.Hierarquia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Hierarquia, "", new { @class = "text-danger" })
        </div>
