@model Teos.Models.Conteudos

@{
    ViewBag.Title = "Edit";
}
<br />
<h4>Conteúdos</h4>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h6>Editar conteúdo</h6>
    <hr />
