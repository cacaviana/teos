@model IEnumerable<Teos.Models.Modulos>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<header>
</header>


 @using (Html.BeginForm("Edit", "ModulosEstudos", FormMethod.Post))
    {
    @Html.AntiForgeryToken()

    

    <input type="submit" name="frmBegin" value="Vai" />


    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cursos.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hierarquia)
            </th>
            <th></th>
        </tr>



        @foreach (var item in Model)
        {

            foreach (var itemCursos in item.Cursos.Nome)
            {
                @Html.RadioButtonFor(modelItem => item.CursosId, item.Cursos.Nome)
                <br />
                @Html.DisplayFor(modelItem => item.Cursos.Nome)
                @Html.RadioButton("name", item.Cursos.Id)
                <br />
            }


            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cursos.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hierarquia)
                </td>
                <td>
                    @Ajax.ActionLink("Link Ajax", "Edit", "ModulosEstudos", new AjaxOptions { HttpMethod = "Post" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id, List = item.Descricao, nome = item.Nome }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>






}

<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>





