@model Teos.ViewModels.AdicionarArquivoViewModel

@{
    ViewBag.Title = "Create";
}

    <head>

        <link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/bootstrap/bootstrap-theme.min.css" rel="stylesheet" />
        <script src="~/Scripts/jquery-1.9.1.min.js"></script>
        <script src="~/Scripts/jquery.ui.widget.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/jquery.MultiFile.js"></script>
        <script src="../../Scripts/jquery-1.3.2.js" type="text/javascript"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('#file').MultiFile({
                    accept: 'gif|jpg',
                    max: 3,
                    STRING: {
                        remove: 'Remover',
                        denied: 'Tipo do arquivo inválido $ext!',
                        duplicate: 'Esse arquivo já foi selecionado:\n$file!'
                    }
                });
            });
        </script>

        <script src="~/Scripts/jQuery.FileUpload/cors/jquery.postmessage-transport.js"></script>
        <script src="~/Scripts/jQuery.FileUpload/cors/jquery.xdr-transport.js"></script>
        <script src="~/Scripts/jQuery.FileUpload/jquery.fileupload.js"></script>

    </head>

<h2>Create</h2>


@using (Html.BeginForm("Create", "UpdateArquivo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>AdicionarArquivoViewModel</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

   

<div class="form-group">
    <div class="file-upload-wrapper">
        <input type="file" class="file-upload" id="arquivos" name="arquivos" multiple />
    </div>
</div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
