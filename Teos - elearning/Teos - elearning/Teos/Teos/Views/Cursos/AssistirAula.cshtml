@model  IEnumerable<Teos.Models.Conteudos>

@{
    ViewBag.Title = "Assistir_Aula";
}

<br />
<h4>@ViewBag.NomedoConteudo</h4>


<h6> @ViewBag.NomedoCurso    >   @ViewBag.NomedoModulo    >   @ViewBag.NomedoConteudo</h6>

<div class="container">
    <div class="row">
        <div class="col-sm-7">
            @foreach (var itemprincial in Model)
            {
                if (itemprincial.Id == ViewBag.IdConteudo)
                {
                    @Html.Raw(itemprincial.Texto_Embed)
                }
            }

            <br /><br />
