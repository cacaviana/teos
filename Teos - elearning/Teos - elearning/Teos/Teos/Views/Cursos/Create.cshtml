@model Teos.Models.Cursos


    <body>

        @{
            ViewBag.Title = "Create";
        }
        <br />
        <h4>Cursos</h4>



        @using (Html.BeginForm("Create", "Cursos", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h6>Criar novo curso</h6>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "col-md-5" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    <label class="col-md-5 alert-danger" name="Erro_arquivo">@ViewBag.Messagem</label>

                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="file-upload-wrapper">
                                <input type="file" class="file-upload" accept="image/*" id="arquivos" name="arquivos" multiple />
                            </div>
                        </div>
                    </div>
                </div>




                <div class="form-group">
                    @Html.LabelFor(model => model.Url_Pg_Vendas, htmlAttributes: new { @class = "col-md-5" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Url_Pg_Vendas, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Url_Pg_Vendas, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Promessa, htmlAttributes: new { @class = "col-md-5" })
                    <div class="col-md-12">
                        @Html.TextAreaFor(model => model.Promessa, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Link_Certificado, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Criar" class="btn btn-outline-dark" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("< Voltar para Cursos", "Index")
        </div>

    </body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
