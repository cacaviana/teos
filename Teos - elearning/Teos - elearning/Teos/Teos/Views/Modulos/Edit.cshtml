@model Teos.Models.Modulos

@{
    ViewBag.Title = "Edit";
}

<br />
<h4>Módulos</h4>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h6>Editar Módulo</h6>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "col-md-5" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CursosId, htmlAttributes: new { @class = "col-md-5" })
            <div class="col-md-12">
                @Html.DropDownList("CursosId", null, htmlAttributes: new { @class = "col-md-5" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Salvar" class="btn btn-outline-dark" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("< Voltar para Módulos", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
