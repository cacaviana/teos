@model Teos.Models.Modulos

@{
    ViewBag.Title = "Create";
}

<br />
<h4>Módulos</h4>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h6>Criar novo módulo</h6>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "col-md-5" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
            @Html.LabelFor(model => model.CursosId, htmlAttributes: new { @class = "col-md-5" })
            <div class="col-md-12">
                @Html.DropDownList("CursosId", null, htmlAttributes: new { @class = "form-control"})
            </div>
        </div>
    

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Criar" class="btn btn-outline-dark" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("< Voltar para Módulos", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}